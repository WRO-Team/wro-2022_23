#include <LiquidCrystal.h>
#define SENSOR_S0 3
#define SENSOR_S1 2
#define SENSOR_S2 5
#define SENSOR_S3 4
#define SENSOR_OUT 6
#define SENSOR_LED 12
const int rs = 7, en = 8, d4 = 9, d5 = 10, d6 = 11, d7 = 12;
LiquidCrystal lcd(rs, en, d4, d5, d6, d7);

int frequencyRED = 0;
int frequencygreen = 0;
int frequencyBLUE = 0;
int passierungRot = 0;
int passierungBlau = 0;
int Runden = 0;

void setup()
{
  pinMode(SENSOR_S0, OUTPUT);
  pinMode(SENSOR_S1, OUTPUT);
  pinMode(SENSOR_S2, OUTPUT);
  pinMode(SENSOR_S3, OUTPUT);
  pinMode(SENSOR_OUT, INPUT);
  pinMode(SENSOR_LED, OUTPUT);

  lcd.begin(16, 2);
  
  // Setting frequency-scaling to 20%
  digitalWrite(SENSOR_S0, HIGH);
  digitalWrite(SENSOR_S1, LOW);
  digitalWrite(SENSOR_LED, HIGH);
  Serial.begin(9600);
}

void loop()
{
  
  // Setting RED filtered photodiodes to be read
  digitalWrite(SENSOR_S2, LOW);
  digitalWrite(SENSOR_S3, LOW);
  frequencyRED = pulseIn(SENSOR_OUT, LOW); // Reading the output frequency

  // Printing RED value on the serial monitor
  Serial.print("R=");
  Serial.print(frequencyRED);
  Serial.print("  ");
  delay(200);

  // Setting GREEN filtered photodiodes to be read
  digitalWrite(SENSOR_S2, HIGH);
  digitalWrite(SENSOR_S3, HIGH);
  frequencygreen = pulseIn(SENSOR_OUT, LOW);

  // Printing GREEN value on the serial monitor
  Serial.print("G=");
  Serial.print(frequencygreen);
  Serial.print("  ");
  delay(200);

  // Setting BLUE filtered photodiodes to be read
  digitalWrite(SENSOR_S2, LOW);
  digitalWrite(SENSOR_S3, HIGH);
  frequencyBLUE = pulseIn(SENSOR_OUT, LOW);

  // Printing BLUE value on the serial monitor
  Serial.print("B=");
  Serial.print(frequencyBLUE);
  Serial.println("  ");
  delay(200);
  

  lcd.setCursor(1, 0);
  if (frequencygreen < frequencyRED && frequencygreen < frequencyBLUE) {
    lcd.clear();
    lcd.print("Farbe: Gruen");
  }
  if (frequencyRED < frequencygreen && frequencyRED < frequencyBLUE) {
    lcd.clear();
    lcd.print("Farbe: Rot");
  }
  if (frequencyBLUE < frequencygreen && frequencyBLUE < frequencyRED) {
    lcd.clear();
    lcd.print("Farbe: Blau");
  }
  lcd.setCursor(0, 1);
  lcd.print("R: ");
  lcd.setCursor(2, 1);
  lcd.print(frequencyRED);
  lcd.setCursor(5, 1);
  lcd.print("G: ");
  lcd.setCursor(8, 1);
  lcd.print(frequencygreen);
  lcd.setCursor(11, 1);
  lcd.print("B: ");
  lcd.setCursor(14, 1);
  lcd.print(frequencyBLUE);

}
